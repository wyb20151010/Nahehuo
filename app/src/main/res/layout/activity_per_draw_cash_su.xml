<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include layout="@layout/toolbar_partner"></include>

    <ImageView
        android:layout_marginTop="45dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/success"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textcolorgray"
        android:textSize="14sp"
        android:text="提现处理中!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textcolorgray"
        android:textSize="14sp"
        android:text="将在2-3个工作日到账，请留意你的银行卡或手机短信通知。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/ll_border_black"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="@color/textcolorgray"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                android:text="提现金额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#f07669"
                    android:layout_marginRight="10dp"
                    android:textSize="13sp"
                    android:text="999.55元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/linecolorgray"
            android:layout_width="match_parent"
            android:layout_height="1px">

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="@color/textcolorgray"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                android:text="中国工商银行"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textcolorgray"
                    android:layout_marginRight="10dp"
                    android:textSize="13sp"
                    android:text="尾号 5290"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_back"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="返回"
            android:background="@drawable/bg_shape_round"
            android:layout_width="120dp"
            android:layout_height="39dp"/>
    </RelativeLayout>
</LinearLayout>