<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar_partner"></include>

    <LinearLayout
        android:background="@color/backgroundgray"
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/textcolorgray"
            android:text="公司"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <EditText
                android:gravity="right|center_vertical"
                android:maxLength="20"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColorHint="@color/textcolorgrayhint"
                android:hint="请填写"
                android:textSize="15sp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px">

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/textcolorgray"
            android:text="职位"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <EditText
                android:gravity="right|center_vertical"
                android:maxLength="20"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColorHint="@color/textcolorgrayhint"
                android:hint="请填写"
                android:textSize="15sp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_entry_date"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/textcolorgray"
            android:text="入职时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_entry_date"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/textcolorgrayhint"
                android:text="请选择"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_out_date"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/textcolorgray"
            android:text="离职时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_out_date"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/textcolorgrayhint"
                android:text="请选择"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px"></LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="129dp">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/textcolorgray"
            android:text="工作描述"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:gravity="top"
                android:maxLength="500"
                android:id="@+id/et_pro_name"
                android:textColorHint="@color/textcolorgrayhint"
                android:hint="简要描述在职期间的工作内容和职责等等"
                android:textSize="13sp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textColor="@color/textcolorgrayhint"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="11sp"
                android:text="23/500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px"></LinearLayout>

    <RelativeLayout
        android:background="@color/backgroundgray"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_login"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="保存"
            android:background="@drawable/bg_shape_round"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6_80"/>
    </RelativeLayout>
</LinearLayout>