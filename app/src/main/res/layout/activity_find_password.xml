<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar_partner"></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5.7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </LinearLayout>

            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:layout_width="@dimen/width_70_80"
                android:layout_height="0dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/met_phone"
                    android:phoneNumber="true"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/iv_reg_icon"
                    android:textColorHint="@color/textcolorgrayhint"
                    android:hint="手机号（仅支持中国大陆手机号）"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:met_textColor="@color/textcolorgray"
                    app:met_textColorHint="@color/textcolorgrayhint"
                    app:met_clearButton="true"
                    app:met_hideUnderline="true"
                    app:met_floatingLabel="none"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:background="@color/linecolorgray"
                android:layout_width="@dimen/width_76_80"
                android:layout_height="1px"></LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </LinearLayout>

            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:layout_width="@dimen/width_70_80"
                android:layout_height="0dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/met_code"
                    android:phoneNumber="true"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/iv_reg_icon1"
                    android:textColorHint="@color/textcolorgrayhint"
                    android:hint="短信验证码"
                    android:background="@null"
                    android:layout_width="@dimen/width_40_80"
                    android:layout_height="match_parent"
                    app:met_hideUnderline="true"
                    app:met_textColor="@color/textcolorgray"
                    app:met_textColorHint="@color/textcolorgrayhint"
                    app:met_clearButton="true"
                    app:met_floatingLabel="none"/>

                <TextView
                    android:id="@+id/tv_verif_code"
                    android:textColor="@color/blue"
                    android:layout_marginRight="15dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="3dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="获取验证码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:background="@color/linecolorgray"
                android:layout_width="@dimen/width_76_80"
                android:layout_height="1px"></LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:layout_marginBottom="5dp"
                android:id="@+id/btn_find_pass_next"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="下一步"
                android:background="@drawable/bg_shape_round"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/width_74_80"
                android:layout_height="@dimen/height_6_80"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/width_70_80"
            android:layout_height="@dimen/height_4_80">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_reg_tell"
                android:text="邮箱账号找回密码，"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_enter_email"
                android:textColor="@color/blue"
                android:layout_toRightOf="@+id/tv_reg_tell"
                android:layout_gravity="center_vertical"
                android:text="请点击这里"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_9_80"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </RelativeLayout>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="@dimen/width_70_80"
                android:layout_height="0dp"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>