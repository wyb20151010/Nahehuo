<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/toolbar_partner"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textcolorgray"
            android:textSize="15sp"
            android:text="15021381877"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/textcolorgray"
            android:id="@+id/et_code"
            android:layout_centerVertical="true"
            android:textColorHint="@color/textcolorgrayhint"
            android:hint="验证码"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/rl_get_code"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:textColor="@color/textcolorgray"
                android:textSize="15sp"
                android:text="获取验证码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/et_reset_pwd"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/textcolorgray"
            android:layout_centerVertical="true"
            android:textColorHint="@color/textcolorgrayhint"
            android:hint="新的支付密码(6位数字)"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/back_gray"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_pay"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="提交"
            android:background="@drawable/bg_shape_round"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6_80"/>
    </LinearLayout>
</LinearLayout>