<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/linecolorgray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layout_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/toolbar_tab1"
                android:layout_width="@dimen/height_3_80"
                android:layout_height="@dimen/height_3_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_1_80"
                android:src="@drawable/job"/>

            <TextView
                android:id="@+id/toolbar_text1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_3_80"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:text="职场"
                android:textColor="#636363"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/toolbar_tab2"
                android:layout_width="@dimen/height_3_80"
                android:layout_height="@dimen/height_3_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_1_80"
                android:src="@drawable/project"/>

            <TextView
                android:id="@+id/toolbar_text2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_3_80"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:text="项目"
                android:textColor="#636363"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/toolbar_tab3"
                android:layout_width="@dimen/height_3_80"
                android:layout_height="@dimen/height_3_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_1_80"
                android:src="@drawable/event"/>

            <TextView
                android:id="@+id/toolbar_text3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_3_80"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:text="活动"
                android:textColor="#636363"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="@dimen/height_5_80"
                android:layout_height="@dimen/height_3_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_1_80">

                <ImageView
                    android:id="@+id/toolbar_tab4"
                    android:layout_width="@dimen/height_5_80"
                    android:layout_height="@dimen/height_3_80"
                    android:src="@drawable/partner"/>

                <LinearLayout
                    android:id="@+id/message_icon4"
                    android:layout_width="@dimen/width_3_80"
                    android:layout_height="@dimen/width_3_80"
                    android:layout_gravity="top|right"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/message_num4"
                        android:layout_width="@dimen/width_3_80"
                        android:layout_height="@dimen/width_3_80"
                        android:background="@drawable/dot"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textSize="10sp"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/toolbar_text4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3_80"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:text="合伙人"
                android:textColor="#636363"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tab5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="@dimen/height_5_80"
                android:layout_height="@dimen/height_3_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_1_80">

                <ImageView
                    android:id="@+id/toolbar_tab5"
                    android:layout_width="@dimen/height_5_80"
                    android:layout_height="@dimen/height_3_80"
                    android:src="@drawable/my"/>

                <LinearLayout
                    android:id="@+id/message_icon5"
                    android:layout_width="@dimen/width_3_80"
                    android:layout_height="@dimen/width_3_80"
                    android:layout_gravity="top|right"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/message_num5"
                        android:layout_width="@dimen/width_3_80"
                        android:layout_height="@dimen/width_3_80"
                        android:background="@drawable/dot"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textSize="10sp"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/toolbar_text5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_3_80"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:text="我"
                android:textColor="#636363"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>