<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/textcolorgray"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:text="最新"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@color/linecolorgray"
            android:layout_width="1px"
            android:layout_height="20dp">

        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/textcolorgray"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:text="最热"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@color/linecolorgray"
            android:layout_width="1px"
            android:layout_height="20dp">

        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/textcolorgray"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:text="城市"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_1"
        android:layout_below="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/backgroundgray">

    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_below="@+id/ll_1"
        android:id="@+id/plv_internship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.handmark.pulltorefresh.library.PullToRefreshListView>

    <Button
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_login"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="加入实习圈"
        android:background="@drawable/bg_shape_round"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/width_74_80"
        android:layout_height="@dimen/height_5_80"/>
</RelativeLayout>