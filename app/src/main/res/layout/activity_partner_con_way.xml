<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar_partner">

    </include>
    
    <LinearLayout
        android:background="@color/backgroundgray"
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/textcolorgray"
            android:text="手机"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <EditText
                android:gravity="right|center_vertical"
                android:id="@+id/et_name"
                android:maxLength="20"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColorHint="@color/textcolorgrayhint"
                android:hint="如 : 139xxx70369"
                android:textSize="15sp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px">

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/textcolorgray"
            android:text="邮箱"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <EditText
                android:gravity="right|center_vertical"
                android:id="@+id/et_email"
                android:maxLength="20"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColorHint="@color/textcolorgrayhint"
                android:hint="如 : name@example.com"
                android:textSize="15sp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px">
    </LinearLayout>
    <RelativeLayout
        android:background="@color/backgroundgray"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:text="* 手机邮箱，陌生人是不会看见的"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/backgroundgray"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_login"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="保存"
            android:background="@drawable/bg_shape_round"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6_80"/>
    </RelativeLayout>
</LinearLayout>