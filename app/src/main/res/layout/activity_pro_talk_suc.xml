<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:layout_gravity="center">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="约谈申请成功"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回首页"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="10dp"
        android:text="很明显是直接使用反射的方法从Context里找到对应方法名的方法，而且形式参数必须是（View），必须是public类型（这里没有改访问权限），然后就直接invoke调用方法了，简单粗暴"
        android:textSize="14sp"
        android:textColor="@color/textcolorgray"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="39dp">
        <Button
            android:id="@+id/btn_back_list"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="返回项目列表"
            android:background="@drawable/bg_shape_round_blue"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="查看我的项目"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_shape_round"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>