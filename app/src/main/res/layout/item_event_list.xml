<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:card_view="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_centerHorizontal="true"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:background="@color/jobtitlecolor"
                android:layout_width="match_parent"
                android:layout_height="34dp">

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_event_title"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="大工厂------专注于打造“服饰生态圈”的互联网公司"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <com.makeramen.RoundedImageView
                    android:id="@+id/iv_per_avater"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:corner_radius="22dp"
                    />

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_per_name"
                        android:layout_marginTop="15dp"
                        android:text="樱桃小王子"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_per_pos"
                        android:layout_marginTop="4dp"
                        android:text="后台产品经理 - 今翌信息科技（上海）有限公司"
                        android:textColor="@color/textcolorgray"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/linecolorgray"
                android:layout_width="match_parent"
                android:layout_height="1px">

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tv_event_time"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/textcolorgray"
                        android:text="2015-12-31 05:00 至 2016-02-01"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tv_event_number"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/textcolorgray"
                        android:text="1000人"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/ll_tag"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/checked_bg_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        >

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"
                            android:id="@+id/tv_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:text="200元/人"/>
                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                    <ImageView
                        android:id="@+id/iv_event_location"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:singleLine="true"
                        android:id="@+id/tv_event_location"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_event_location"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/textcolorgray"
                        android:text="上海市松江区九新公路341弄28号7层"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_event_distance"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/textcolorgrayhint"
                        android:textSize="11sp"
                        android:layout_alignParentRight="true"
                        android:text="362m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tv_event_comment"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:text="本人多个创业项目，想找技术或创业人士聊聊"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/linecolorgray"
                android:layout_width="match_parent"
                android:layout_height="1px">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp">
               <RelativeLayout
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="match_parent">
                     <ImageView
                         android:layout_centerInParent="true"
                         android:scaleType="centerCrop"
                         android:layout_width="14dp"
                         android:layout_height="14dp"/>
               </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                     <LinearLayout
                         android:layout_centerInParent="true"
                         android:orientation="horizontal"
                         android:layout_width="wrap_content"
                         android:layout_height="14dp">
                         <ImageView
                             android:scaleType="centerCrop"
                             android:layout_width="14dp"
                             android:layout_height="14dp"/>
                         <TextView
                             android:id="@+id/tv_event_watch_num"
                             android:text="99"
                             android:layout_marginLeft="10dp"
                             android:textSize="11sp"
                             android:textColor="@color/textcolorgrayhint"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>
                     </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp">
                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="14dp"
                            android:layout_height="14dp"/>
                        <TextView
                            android:id="@+id/tv_event_com_num"
                            android:text="99"
                            android:layout_marginLeft="10dp"
                            android:textSize="11sp"
                            android:textColor="@color/textcolorgrayhint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp">
                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="14dp"
                            android:layout_height="14dp"/>
                        <TextView
                            android:id="@+id/tv_event_per_num"
                            android:text="99"
                            android:layout_marginLeft="10dp"
                            android:textSize="11sp"
                            android:textColor="@color/textcolorgrayhint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_below="@+id/card"
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>
</RelativeLayout>