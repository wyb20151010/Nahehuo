<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include layout="@layout/toolbar_partner"></include>

    <LinearLayout
        android:background="@color/back_gray"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:textColor="@color/textcolorgray"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="请输入新手机号并完成验证"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:layout_marginLeft="10dp"
            android:textColor="@color/textcolorgray"
            android:id="@+id/et_phone"
            android:maxLength="20"
            android:layout_centerVertical="true"
            android:textColorHint="@color/textcolorgrayhint"
            android:hint="11位新手机号"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:layout_weight="3.5"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textcolorgray"
            android:id="@+id/et_code"
            android:maxLength="20"
            android:layout_centerVertical="true"
            android:textColorHint="@color/textcolorgrayhint"
            android:hint="短信验证码"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:background="@color/linecolorgray"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:layout_width="1px"
            android:layout_height="match_parent"></LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textSize="13sp"
                android:layout_centerInParent="true"
                android:textColor="@color/textcolorgrayhint"
                android:text="获取验证码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:background="@color/back_gray"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:id="@+id/btn_find_pass_next"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="完成"
            android:background="@drawable/bg_shape_round"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/width_74_80"
            android:layout_height="@dimen/height_6_80"/>
    </RelativeLayout>
</LinearLayout>