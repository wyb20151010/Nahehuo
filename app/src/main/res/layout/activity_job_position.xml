<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar_project">

    </include>
<!--
    <LinearLayout
        android:background="@color/backgroundgray"
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>-->

    <LinearLayout
        android:background="@color/white"
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            >

            <RelativeLayout
                android:layout_centerInParent="true"
                android:background="@drawable/oval"
                android:layout_width="67dp"
                android:layout_height="67dp">

                <TextView

                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="全职"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_job_internship"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:background="@drawable/oval1"
                android:layout_width="67dp"
                android:layout_height="67dp">

                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="实习"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_job_parttime"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:background="@drawable/oval2"
                android:layout_width="67dp"
                android:layout_height="67dp">

                <TextView

                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="兼职"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:background="@drawable/oval3"
                android:layout_width="67dp"
                android:layout_height="67dp">

                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="订阅"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/plv_job_list"
            android:divider="@null"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        </com.handmark.pulltorefresh.library.PullToRefreshListView>
    </LinearLayout>

</LinearLayout>