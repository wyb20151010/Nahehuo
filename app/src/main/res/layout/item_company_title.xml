<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/company_title"
        android:layout_width="95dp"
        android:layout_height="104dp">

        <LinearLayout
            android:layout_centerInParent="true"
            android:background="@drawable/company_title_center"
            android:orientation="vertical"
            android:layout_width="82dp"
            android:layout_height="82dp">

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/iv_company_title"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/height_6_80"
                    android:layout_height="@dimen/height_6_80"/>
            </RelativeLayout>

            <RelativeLayout
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/tv_company_title"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:text="今翌信息科技有限公司"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>