<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="70dp">

            <com.makeramen.RoundedImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_avater"
                android:src="@drawable/ic_launcher"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:corner_radius="25dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_marginTop="14dp"
                android:id="@+id/tv_per_name"
                android:text="樱桃小王子"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@+id/tv_per_name"
                android:id="@+id/tv_per_pos"
                android:layout_marginTop="4dp"
                android:text="后台产品经理 - 今翌信息科技（上海）有限公司"
                android:textColor="@color/textcolorgray"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:visibility="invisible"
                android:orientation="horizontal"
                android:id="@+id/ll_line"
                android:layout_alignParentBottom="true"
                android:background="@color/linecolorgray"
                android:layout_width="match_parent"
                android:layout_height="1px">

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>