<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/toolbar_partner"></include>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/back_gray"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <com.makeramen.RoundedImageView
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:corner_radius="25dp"
            android:src="@drawable/panda"/>

        <TextView
            android:id="@+id/tv_subtitle"
            android:textColor="@color/textcolorgray"
            android:textSize="13sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="认证工作经历，提高身份信用度，获得更多优质机会"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_time"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/textcolorgray"
                android:text="2014.3-至今"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="30dp"
                    android:layout_height="16dp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_position"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:text="高级产品经理"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_certificate"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/checked_bg_red1"
                    android:layout_alignParentRight="true"
                    android:text="未认证"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_company"
                android:textSize="13sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:text="今翌信息科技(上海)有限公司"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/checked_bg_gray_xuxian"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/tv_word_one"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/textcolorgray"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:text="上传工作经历证明"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_word_two"
                    android:textColor="@color/textcolorgray"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:text="名片，工牌任选一种。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/iv_avater"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:id="@+id/iv_avater"
                    android:layout_centerInParent="true"
                    android:src="@drawable/panda"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="110dp"/>
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_word_three"
        android:text="确保公司，职位，姓名清晰可见。如含有联系方式等隐私信息，上传或拍摄前注意局部遮挡。"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>