<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/toolbar_partner"></include>

    <LinearLayout
        android:background="@color/back_gray"
        android:layout_width="match_parent"
        android:layout_height="15dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:textColor="@color/textcolorgray"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="公司"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <EditText
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/textcolorgray"
                android:id="@+id/et_company"
                android:maxLength="20"
                android:layout_centerVertical="true"
                android:textColorHint="@color/textcolorgrayhint"
                android:hint="请填写"
                android:textSize="13sp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:textColor="@color/textcolorgray"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="职位"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <EditText
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/textcolorgray"
                android:id="@+id/et_position"
                android:maxLength="20"
                android:layout_centerVertical="true"
                android:textColorHint="@color/textcolorgrayhint"
                android:hint="请填写"
                android:textSize="13sp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:textColor="@color/textcolorgray"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="入职时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/textcolorgray"
                android:textColorHint="@color/textcolorgrayhint"
                android:hint="请选择"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_job_in_time"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:textColor="@color/textcolorgray"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="离职时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/textcolorgray"
                android:textColorHint="@color/textcolorgrayhint"
                android:hint="请选择"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_job_out_time"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:background="@color/linecolorgray"
        android:layout_width="match_parent"
        android:layout_height="1px">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
            android:layout_marginTop="17dp"
            android:textColor="@color/textcolorgray"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="工作描述"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_intro"
                android:minEms="20"
                android:textSize="13sp"
                android:textColor="@color/textcolorgray"
                android:textColorHint="@color/textcolorgrayhint"
                android:hint="简要描述在职期间的工作内容和职责等"
                android:gravity="top"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:textSize="13sp"
                android:textColor="@color/textcolorgrayhint"
                android:text="23/500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:background="@color/back_gray"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_bottom"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <RelativeLayout
                android:id="@+id/rl_delete"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_centerInParent="true"
                    android:text="删除"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:layout_width="1px"
                android:layout_height="match_parent"></LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_save"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_centerInParent="true"
                    android:text="保存"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>