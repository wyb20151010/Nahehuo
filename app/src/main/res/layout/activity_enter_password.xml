<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar_partner"></include>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textcolorgrayhint"
                    android:text="你不是机器人，请输入密码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="6"
                android:layout_width="@dimen/width_76_80"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/iv_reg_icon"
                    android:layout_width="@dimen/width_8_80"
                    android:layout_height="match_parent"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/met_pwd"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/iv_reg_icon"
                    android:textColorHint="@color/textcolorgrayhint"
                    android:hint="请输入密码"
                    android:background="@null"
                    android:layout_width="@dimen/width_68_80"
                    android:layout_height="match_parent"
                    app:met_hideUnderline="true"
                    app:met_textColor="@color/textcolorgray"
                    app:met_textColorHint="@color/textcolorgrayhint"
                    app:met_clearButton="true"
                    app:met_floatingLabel="none"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:background="@color/linecolorgray"
                android:layout_width="@dimen/width_76_80"
                android:layout_height="1px"></LinearLayout>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:layout_width="@dimen/width_76_80"
                android:layout_height="0dp">


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/btn_register_ok"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="完成"
                android:background="@drawable/bg_shape_round"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_width="@dimen/width_74_80"
                android:layout_height="@dimen/height_6_80"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">


    </RelativeLayout>


</LinearLayout>